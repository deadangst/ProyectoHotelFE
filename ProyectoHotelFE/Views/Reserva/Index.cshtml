@model IEnumerable<ProyectoHotelFE.Models.ReservaModel>

@{
    ViewData["Title"] = "Listado de Reservas";
}

<h1>Listado de Reservas</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<section class="content">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-between align-items-center mb-3">
            <a asp-action="AbrirCrearReserva" asp-controller="Reserva" class="btn btn-success mb-3">
                <i class="fa fa-plus"></i> Crear Nueva Reserva
            </a>

            <form asp-action="FiltrarListaReserva" method="get" class="form-inline">
                <input type="date" name="fechaReservaBuscar" class="form-control mr-2" placeholder="Buscar por fecha..." />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>
        </div>
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="table-responsive">
                        <div class="container p-3 mb-3 bg-light rounded" style="width: 100%;">
                            <table id="reservasTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nº Reserva</th>
                                        <th>Nº Habitación</th>
                                        <th>ID Usuario</th>
                                        <th>Check-In</th>
                                        <th>Check-out</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.reservaID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.habitacionID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.usuarioID)</td>
                                            <td>@String.Format("{0:dd/MM/yyyy}", item.fechaInicio)</td>
                                            <td>@String.Format("{0:dd/MM/yyyy}", item.fechaFin)</td>
                                            <td>
                                                <a asp-action="AbrirEdicionReserva" asp-route-reservaID="@item.reservaID" class="btn btn-default btn-xs">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a href="javascript:void(0);" onclick="confirmarEliminacion('@Url.Action("BorrarReserva", new { reservaID = item.reservaID })')" class="btn btn-danger btn-xs" style="margin-left:2px">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-action="AbrirCrearPago" asp-controller="Pago" asp-route-reservaID="@item.reservaID" asp-route-monto="@item.montoTotal" asp-route-fechaFin="@item.fechaFin" class="btn btn-success btn-xs" style="margin-left:2px">
                                                    <i class="fa fa-credit-card"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script>
        $(document).ready(function () {
            $('#reservasTable').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": " > Siguiente",
                        "previous": "Anterior < "
                    }
                },
                "dom": '<"top"l>rt<"bottom"ip><"clear">'
            });
        });
    </script>
}
