@model IEnumerable<ProyectoHotelFE.Models.UsuarioModel>

@{
    ViewData["Title"] = "Listado de Usuarios";

    // Diccionario para mapear IDs de tipo de usuario a sus nombres
    var tiposDeUsuario = new Dictionary<int, string>
{
        { 1, "Super Usuario" },
        { 2, "Administrador" },
        { 3, "Recepcionista" },
        { 4, "Cliente" }
    };
}

<!-- Encabezado de Contenido (Encabezado de página) -->
<h1>Listado de Usuarios</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Contenido Principal -->
<section class="content">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-between align-items-center mb-3">
            <div>
                <a asp-action="AbrirCrearUsuario" asp-controller="Hotel" class="btn btn-success mb-3">
                    <i class="fa fa-plus"></i> Añadir Usuarios
                </a>
            </div>
            <div>
                <form asp-action="FiltrarListaUsuarios" method="get" class="form-inline">
                    <input type="text" name="UsuarioBuscar" class="form-control mr-2" placeholder="Buscar Usuario..." />
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </form>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="table-responsive">
                        <div class="container p-3 mb-3 bg-light rounded" style="width: 100%;">
                            <!-- Contenedor con fondo sólido -->
                            <table id="usuariosTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Tipo de Usuario</th>
                                        <th>Contraseña</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.usuarioID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                            <td>@Html.DisplayFor(modelItem => item.apellido)</td>
                                            <td>@Html.DisplayFor(modelItem => item.email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                                            <td>@tiposDeUsuario[item.tipoUsuarioID]</td> <!-- Muestra el nombre del tipo de usuario -->
                                            <td>********</td>
                                            <td>
                                                <a asp-action="AbrirEdicionUsuario" asp-route-usuarioID="@item.usuarioID" class="btn btn-default btn-xs">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a asp-action="BorrarUsuario" asp-route-usuarioID="@item.usuarioID" class="btn btn-danger btn-xs" style="margin-left:2px">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--<div class="row mt-3">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="usuariosTable_info" role="status" aria-live="polite"></div>--> <!-- Información de paginación -->
                        <!--</div>
                        <div class="col-sm-7 text-right">
                            <div class="dataTables_paginate paging_simple_numbers" id="usuariosTable_paginate">
                                <ul class="pagination">
                                    <li class="paginate_button previous" id="usuariosTable_previous">
                                        <button class="btn btn-primary" aria-controls="usuariosTable" data-dt-idx="0" tabindex="0">Anterior</button>
                                    </li>
                                    <li class="paginate_button active">
                                        <a href="#" aria-controls="usuariosTable" data-dt-idx="1" tabindex="0">1</a>
                                    </li>
                                    <li class="paginate_button next" id="usuariosTable_next">
                                        <button class="btn btn-primary" aria-controls="usuariosTable" data-dt-idx="2" tabindex="0">Siguiente</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>-->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @*<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"></script>*@
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#usuariosTable').DataTable({
                "pageLength": 10, // Número de entradas mostradas por página
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": " > Siguiente",
                        "previous": "Anterior < "
                    }
                },
                "dom": '<"top"l>rt<"bottom"ip><"clear">' // Controla la disposición de los elementos en la tabla y elimina el search
            });
        });
    </script>
}
