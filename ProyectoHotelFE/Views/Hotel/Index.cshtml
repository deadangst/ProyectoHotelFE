@model IEnumerable<ProyectoHotelFE.Models.UsuarioModel>

@{
    ViewData["Title"] = "Listado de Usuarios";

    // Diccionario para mapear IDs de tipo de usuario a sus nombres
    var tiposDeUsuario = new Dictionary<int, string>
{
        { 1, "Super Usuario" },
        { 2, "Administrador" },
        { 3, "Recepcionista" },
        { 4, "Cliente" }
    };
}

<!-- Encabezado de Contenido (Encabezado de página) -->
<h1>Listado de Usuarios</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Contenido Principal -->
<section class="content">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-between align-items-center mb-3">
            <div>
                <a asp-action="AbrirCrearUsuario" asp-controller="Hotel" class="btn btn-success mb-3">
                    <i class="fa fa-plus"></i> Añadir Usuarios
                </a>
            </div>
            <div>
                <form asp-action="FiltrarListaUsuarios" method="get" class="form-inline">
                    <input type="text" name="UsuarioBuscar" class="form-control mr-2" placeholder="Buscar Usuario..." />
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </form>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="table-responsive">
                        <div class="container p-3 mb-3 bg-light rounded" style="width: 100%;">
                            <!-- Contenedor con fondo sólido -->
                            <table id="usuariosTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Tipo de Usuario</th>
                                        <th>Contraseña</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.usuarioID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                            <td>@Html.DisplayFor(modelItem => item.apellido)</td>
                                            <td>@Html.DisplayFor(modelItem => item.email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                                            <td>@tiposDeUsuario[item.tipoUsuarioID]</td> <!-- Muestra el nombre del tipo de usuario -->
                                            <td>********</td>
                                            <td>
                                                <a asp-action="AbrirEdicionUsuario" asp-route-usuarioID="@item.usuarioID" class="btn btn-default btn-xs">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a href="javascript:void(0);" onclick="confirmarEliminacion('@Url.Action("BorrarUsuario", new { usuarioID = item.usuarioID })')" class="btn btn-danger btn-xs" style="margin-left:2px">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.js"></script>
    <script src="~/js/scripts.js"></script> <!-- Ruta del archivo scripts.js con el mensaje compartido de borrado -->
    <script src="~/js/datatable.js"></script>
    <!-- Incluye cualquier script nuevo aquí -->
    <script>
        initializeDataTable('#usuariosTable');
    </script>

}
