@model ProyectoHotelFE.Models.UsuarioModel

@{
    ViewData["Title"] = "Abrir Crear Usuario";
}

<h1>Registrar Nuevo Usuario</h1>

<h4>Ingrese la siguiente información:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GuardarUsuario" asp-controller="Hotel" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Digite el nombre del usuario:</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apellido" class="control-label">Digite el apellido del usuario:</label>
                <input asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Digite el email del usuario:</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono" class="control-label">Digite el teléfono del usuario:</label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoUsuarioID" class="control-label">Seleccione el tipo de usuario:</label>
                <select asp-for="tipoUsuarioID" class="form-control" asp-items="ViewBag.TipoUsuarios"></select>
                <span asp-validation-for="tipoUsuarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="passwordHash" class="control-label">Digite la contraseña del usuario:</label>
                <input asp-for="passwordHash" type="password" class="form-control" />
                <span asp-validation-for="passwordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Hotel">Regresar a listado de usuarios</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}