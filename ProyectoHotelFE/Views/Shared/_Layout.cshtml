<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" /> <!-- Establece la codificación de caracteres a UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Configura el viewport para mejorar la presentación en dispositivos móviles -->
    <title>@ViewData["Title"] - Hotel Steve</title> <!-- Define el título de la página usando ViewData -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" /> <!-- Incluye la fuente Roboto desde Google Fonts -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Incluye el archivo CSS de Bootstrap -->
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Incluye el archivo CSS personalizado -->
    <link rel="stylesheet" href="~/lib/jquery-ui-1.12.1/jquery-ui.min.css" /> <!-- Incluye el archivo CSS de jQuery UI -->
    <link rel="stylesheet" href="~/lib/DataTables/datatables.min.css" /> <!-- Incluye el archivo CSS de DataTables -->
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" /> <!-- Incluye el archivo CSS de Toastr para notificaciones -->
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert.css" /> <!-- Incluye el archivo CSS de SweetAlert para alertas -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" /> <!-- Incluye el archivo CSS de FontAwesome para íconos -->
    <link rel="stylesheet" href="~/css/custom.css" /> <!-- Incluye el archivo CSS personalizado -->
    <style>
        body { /* Aplica la fuente Roboto a todo el cuerpo del documento */
            font-family: 'Roboto', sans-serif;
            font-size: 14px; /* Ajusta el tamaño de la fuente */
        }

        .sidebar { /* Estilo para el menú de navegación lateral */
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 60px; /* Ajusta la posición del menú lateral */
            left: 0;
            background-color: #343a40; /* Fondo oscuro */
            overflow-x: hidden;
            padding-top: 20px;
            color: white; /* Texto blanco */
            transition: 0.3s; /* Transición suave para mostrar y ocultar */
        }

            .sidebar.hidden { /* Oculta el menú lateral */
                width: 0;
                padding-top: 0;
                overflow: hidden;
            }

            .sidebar h2 { /* Estilo para el título del menú lateral */
                color: white; /* Texto blanco */
                padding-left: 25px;
            }

            .sidebar a { /* Estilo para los enlaces del menú lateral */
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px; /* Ajusta el tamaño de la fuente */
                color: #cfd8dc; /* Texto gris claro */
                display: block;
            }

                .sidebar a:hover { /* Efecto hover para los enlaces del menú lateral */
                    background-color: #495057; /* Fondo gris oscuro al hacer hover */
                    color: #ffffff; /* Texto blanco al hacer hover */
                }

        .main-content { /* Estilo para el contenido principal */
            margin-left: 260px; /* Deja espacio para el menú lateral */
            padding: 20px;
            padding-top: 80px; /* Ajusta el espacio para la barra de navegación superior */
            transition: 0.3s; /* Transición suave para el desplazamiento */
        }

            .main-content.full-width { /* Estilo para el contenido cuando el menú lateral está oculto */
                margin-left: 0;
            }

        .navbar-top { /* Estilo para la barra de navegación superior */
            background-color: #0056b3; /* Color azul específico */
            color: white;
            position: fixed; /* Barra de navegación fija */
            top: 0; /* Pegada al borde superior */
            width: 100%; /* Se extiende por todo el ancho de la ventana */
            z-index: 2; /* Asegura que la barra de navegación esté por encima del menú lateral */
        }

            .navbar-top .navbar-brand, .navbar-top .nav-link { /* Estilo para los enlaces en la barra de navegación */
                color: white; /* Texto blanco */
            }

                .navbar-top .nav-link:hover { /* Efecto hover para los enlaces de navegación */
                    color: #cfd8dc; /* Texto gris claro al hacer hover */
                }

        .toggle-btn { /* Estilo para el botón de mostrar/ocultar el menú lateral */
            font-size: 20px;
            cursor: pointer;
            background-color: #0056b3; /* Mismo color que la barra de navegación */
            color: white;
            border: none;
            padding: 10px 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-top">
        <!-- Barra de navegación superior -->
        <button class="toggle-btn" onclick="toggleSidebar()">&#9776;</button> <!-- Botón para mostrar/ocultar el menú lateral -->
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Hotel Steve</a> <!-- Nombre del hotel -->
    </nav>
    <div class="sidebar" id="sidebar">
        <!-- Contenedor del menú de navegación lateral -->
        <h2>Navegación Principal</h2> <!-- Título del menú de navegación lateral -->
        <a asp-area="" asp-controller="Habitacion" asp-action="Index"><i class="fa fa-bed"></i> Gestion Habitaciones</a> <!-- Enlace a la gestión de habitaciones -->
        <a asp-area="" asp-controller="Hotel" asp-action="Index"><i class="fa fa-users"></i> Gestion Usuarios</a> <!-- Enlace a la gestión de usuarios -->
        <a asp-area="" asp-controller="Reserva" asp-action="Index"><i class="fa fa-calendar"></i> Gestion Reservas</a> <!-- Enlace a la gestión de reservas -->
        <a asp-area="" asp-controller="Pago" asp-action="Index"><i class="fa fa-credit-card"></i> Gestion Pagos</a> <!-- Enlace a la gestión de pagos -->
        <a asp-area="" asp-controller="Tarjeta" asp-action="Index"><i class="fa fa-id-card"></i> Gestion Tarjetas</a> <!-- Enlace a la gestión de tarjetas -->
        <a asp-area="" asp-controller="Bitacora" asp-action="Index"><i class="fa fa-book"></i> Ver Bitácora</a> <!-- Enlace a la bitácora -->
    </div>
    <div class="main-content" id="main-content">
        <!-- Contenedor del contenido principal -->
        <div id="alert-container"></div> <!-- Aquí se mostrarán las alertas -->
        <main role="main" class="pb-3">
            @RenderBody() <!-- Renderiza el cuerpo del contenido principal -->
            @RenderSection("MainContent", required: false) <!-- Renderiza una sección opcional llamada "MainContent" -->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Steven Vega - <a asp-area="" asp-controller="Home" asp-action="About">Sobre el Proyecto</a> <!-- Enlace a la página de información sobre el proyecto -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- Incluye el archivo JavaScript de jQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Incluye el archivo JavaScript de Bootstrap -->
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js"></script> <!-- Incluye el archivo JavaScript de jQuery UI -->
    <script src="~/lib/DataTables/datatables.min.js"></script> <!-- Incluye el archivo JavaScript de DataTables -->
    <script src="~/lib/toastr/toastr.min.js"></script> <!-- Incluye el archivo JavaScript de Toastr para notificaciones -->
    <script src="~/lib/sweetalert/sweetalert.min.js"></script> <!-- Incluye el archivo JavaScript de SweetAlert para alertas -->
    <script src="~/lib/marioizquierdo-jquery.serializeJSON/jquery.serializejson.min.js"></script> <!-- Incluye el archivo JavaScript de serializeJSON para formularios -->

    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Incluye el archivo JavaScript personalizado y añade la versión para el cache-busting -->
    @RenderSection("Scripts", required: false) <!-- Renderiza una sección opcional llamada "Scripts" -->

    <script type="text/javascript">
        function toggleSidebar() { // Función para mostrar/ocultar el menú lateral
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("main-content");
            sidebar.classList.toggle("hidden");
            mainContent.classList.toggle("full-width");
        }

        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]'; <!-- Obtiene el mensaje de éxito de TempData -->
            var errorMessage = '@TempData["ErrorMessage"]'; <!-- Obtiene el mensaje de error de TempData -->

            if (successMessage) {
                $('#alert-container').html('<div class="alert alert-success">' + successMessage + '</div>'); <!-- Muestra un mensaje de éxito en el contenedor de alertas -->
            }

            if (errorMessage) {
                $('#alert-container').html('<div class="alert alert-danger">' + errorMessage + '</div>'); <!-- Muestra un mensaje de error en el contenedor de alertas -->
            }
        });
    </script>
</body>
</html>
