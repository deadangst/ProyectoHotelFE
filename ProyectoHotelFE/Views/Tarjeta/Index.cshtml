@model IEnumerable<ProyectoHotelFE.Models.TarjetaCreditoModel>

@{
    ViewData["Title"] = "Listado de Tarjetas de Crédito";
}

<!-- Encabezado de Contenido (Encabezado de página) -->
<h1>Listado de Tarjetas de Crédito</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Contenido Principal -->
<section class="content">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-between align-items-center mb-3">
            <div>
                <a asp-action="AbrirCrearTarjetaCredito" asp-controller="Tarjeta" class="btn btn-success mb-3">
                    <i class="fa fa-plus"></i> Crear Nueva Tarjeta de Crédito
                </a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="table-responsive">
                        <div class="container p-3 mb-3 bg-light rounded" style="width: 100%;">
                            <!-- Contenedor con fondo sólido -->
                            <table id="tarjetasTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuario ID</th>
                                        <th>Nº Tarjeta</th>
                                        <th>Fecha de Expiración</th>
                                        <th>CVV</th>
                                        <th>Es Válida</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.tarjetaID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.usuarioID)</td>
                                            <td>@item.numeroTarjeta.Substring(item.numeroTarjeta.Length - 4).PadLeft(item.numeroTarjeta.Length, '*')</td>
                                            <td>@item.fechaExpiracion.ToString("MM/yy")</td>
                                            <td>***</td>
                                            <td>@(item.esValida ? "Sí" : "No")</td>
                                            <td>
                                                <a asp-action="AbrirEdicionTarjetaCredito" asp-route-tarjetaID="@item.tarjetaID" class="btn btn-default btn-xs">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a href="javascript:void(0);" onclick="confirmarEliminacion('@Url.Action("BorrarTarjetaCredito", new { tarjetaID = item.tarjetaID })')" class="btn btn-danger btn-xs" style="margin-left:2px">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.0/datatables.min.js"></script>
    <script src="~/js/scripts.js"></script> <!-- Ruta del archivo scripts.js con el mensaje compartido de borrado -->
    <script src="~/js/datatable.js"></script>
    <!-- Incluye cualquier script nuevo aquí -->
    <script>
        initializeDataTable('#tarjetasTable');
    </script>
    
}
