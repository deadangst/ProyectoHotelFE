@model ProyectoHotelFE.Models.UsuarioModel
@*Registrar Usuario Autenticacion*@

@{
    Layout = "AutenticacionLayout";
    ViewData["Title"] = "Abrir Crear Usuario";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <title>Registrar Nuevo Usuario</title>
    <style>
        .login-box {
            width: 360px;
            margin: 7% auto;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <div class="login-box-body">
            <p class="login-box-msg"><b>Registrar Nueva Membresía</b></p>
            <form asp-action="GuardarUsuario" asp-controller="Autenticacion" method="post">
                <div class="form-group has-feedback">
                    <label asp-for="nombre" class="control-label"></label>
                    <input asp-for="nombre" class="form-control" placeholder="Nombre" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="apellido" class="control-label"></label>
                    <input asp-for="apellido" class="form-control" placeholder="Apellido" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" placeholder="ejemplo@correo.com" />
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="telefono" class="control-label"></label>
                    <input asp-for="telefono" class="form-control" placeholder="Teléfono" />
                    <span class="glyphicon glyphicon-earphone form-control-feedback"></span>
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="passwordHash" class="control-label"></label>
                    <input asp-for="passwordHash" class="form-control" placeholder="Debe digitar una clave segura" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="passwordHash" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="tipoUsuarioID" value="4" />
                <div class="row justify-content-center">
                    <div class="col-xs-12 text-center">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Registrar</button>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="Index" asp-controller="Autenticacion" class="text-center">Regresar a Autenticación</a>
                </div>
            </form>
        </div>
    </div>
    <!-- /.login-box -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="~/js/agregarusuario.js"></script>
    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';

            mostrarMensajeUsuarioAgregado(successMessage, errorMessage);
        });
    </script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
